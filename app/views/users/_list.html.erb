<!--部分テンプレートが呼び出された時に-->
<!--Viewから渡される変数が使えるようにローカル変数を用いている-->

<% if book.errors.any? %>
  <ul>
    <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h2>User info</h2>

<%= image_tag user.get_image %>

<h4>name</h4>
<%= user.name %>

<h4>introduction</h4>
<%= user.introduction %>

<%= button_to "User edit", edit_user_path(current_user), method: :get %>

<h1>New book</h1>

<%= form_with model: book, url: books_path do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'create book' %>
  
<% end %>